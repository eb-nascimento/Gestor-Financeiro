rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regras que n찾o mudam
    match /categoria/{docId} {
      allow read: if true;
      allow write: if false; 
    }
    match /metodo/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // ===============================================
    //           REGRAS CORRIGIDAS ABAIXO
    // ===============================================

    match /transacao/{transactionId} {
      // Permite ler (get e list) se o utilizador estiver autenticado.
      // A consulta no JavaScript (where clause) garante que ele s처 lista os seus pr처prios dados.
      allow read: if request.auth != null;
      
      // Permite escrever (criar, editar, apagar) se o utilizador for o dono do documento.
      // request.resource.data.userId funciona tanto para criar como para atualizar.
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /orcamentos/{orcamentoId} {
      // A mesma l처gica aplica-se aqui
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
  }
}