rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para 'categoria'
    match /categoria/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Regra para as preferências do utilizador (correta)
    match /user_preferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para 'metodo' (corrigida)
    match /metodo/{docId} {
      // Qualquer pessoa pode ler a lista de métodos.
      allow read: if true; 
      // Apenas utilizadores autenticados podem escrever (para salvar limite, vencimento, etc.).
      // A regra "allow write: if false;" que estava antes impediria o botão "Salvar" de funcionar.
      allow write: if request.auth != null; 
    }

    // Regra para 'transacao'
    match /transacao/{transactionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Regra para 'orcamentos'
    match /orcamentos/{orcamentoId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}