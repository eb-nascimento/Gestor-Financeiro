rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /categoria/{docId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }
    match /metodo/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // ===============================================
    //           REGRAS CORRIGIDAS ABAIXO
    // ===============================================

    match /transacao/{transactionId} {
      allow read: if request.auth != null;
      
      // Permite CRIAR e ATUALIZAR se o utilizador for o dono dos novos dados
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Permite APAGAR se o utilizador for o dono do documento existente
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /orcamentos/{orcamentoId} {
      // A mesma l√≥gica aplica-se aqui
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
  }
}